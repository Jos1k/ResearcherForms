<div class="modal-dialog">
    <div class="modal-content" style="border-radius: 0; border:none;">
        <div class="modal-header" style="background-color: #34495E; color: white;">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Створити нову форму</h4>
        </div>
        <div class="modal-body">
            <uib-alert ng-repeat="alert in alertsNewForm" type="{{alert.type}}">{{alert.msg}}</uib-alert>
            <div class="container">
                <div class="row">
                    <label for="formName" class="col-md-3 control-label">Назва Форми:</label>
                    <div class="col-md-9">
                        <input type="text" id="formName" class="form-control" placeholder="Назва" ng-model="formName">
                    </div>
                </div>
                <div class="form-group">
                    <div id="main_content_wrap" class="outer">
                        <section id="main_content" class="inner">
                            <form id="formBuilderForm" action="">
                                <textarea name="formBuilder" id="formBuilder" cols="30" rows="10"></textarea>
                            </form>
                            <br style="clear:both">
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" ng-click="hideModal()">Відміна</button>
            <button type="button" class="btn btn-success" ng-disabled="validationOnNewFormModalIsDisabled()" ng-click="addNewForm()">OK</button>
        </div>
    </div>
</div>