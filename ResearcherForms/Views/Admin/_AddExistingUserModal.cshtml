@model long
<div class="modal-content" style="border-radius: 0; border:none;">
    <div class="modal-header" style="background-color: #34495E; color: white;">
        <h5 class="modal-title"><b>Додати дослідника</b></h5>
    </div>
    <div class="modal-body">
        <div ng-init="courseId = @Model" />
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading">Виберіть дослідників зі списку</div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-md-1"></th>
                                <th class="col-md-11">Ім\'я дослідника</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="researcher in researchers">
                                <td style="text-align:center">
                                    <input type="checkbox" ng-model="researcher.isSelected" />
                                </td>
                                <td>
                                    {{researcher.name}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" ng-click="cancel()">
            Відміна
        </button>
        <button type="button" class="btn btn-success" ng-click="ok()" ng-disabled="isNotSelectedResearchers()">
            OK
        </button>
    </div>
</div>