@model long
<div class="modal-content" style="border-radius: 0; border:none;">
    <div class="modal-header" style="background-color: #34495E; color: white;">
        <h5 class="modal-title"><b>Change course name</b></h5>
    </div>
    <div class="modal-body">
        <div ng-init="courseId = @Model" />
        <uib-alert ng-repeat="alert in alerts" type="{{alert.type}}">{{alert.msg}}</uib-alert>
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="courseName">Course name:</label>
                        <input type="text" id="courseName" class="form-control" placeholder="Course name" ng-model="courseName">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" ng-click="cancel()">
            Cancel
        </button>
        <button type="button" class="btn btn-success" ng-click="ok()" ng-disabled="courseNameCheck()">
            OK
        </button>
    </div>
</div>