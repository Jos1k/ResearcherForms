@{
    ViewBag.Title = "Адмін Панель";
}

<div class="row" ng-controller="adminPageController" ng-cloak>
    <div ng-init="courses = @ViewBag.CourseList" />
    <div ng-init="basicUrl = '@ViewBag.BasicUrl'" />
    <div ng-init="createCourseModalTemplate = '@ViewBag.CreateCourseModalTemplate'" />
    <div ng-init="removeCourseModalTemplate = '@ViewBag.RemoveCourseModalTemplate'" />
    

    <h3>Групи досліджень:</h3>
    <div class="row">
        <div class="col-md-6">
            <input ng-model="search.Name" id="search-course" class="form-control" type="text" placeholder="Пошук по групам досліджень">
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-2 text-right">
            <button type="button" class="btn btn-success" ng-click="showCreateCourseModal()">
                Додати нову групу
            </button>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">Назва</th>
                <th class="col-md-2" style="text-align:center">Кількість Форм</th>
                <th class="col-md-2" style="text-align:center">Кількість Досліджень</th>
                <th class="col-md-1" style="text-align:center">Дії</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="course in courses | filter:search:strict">
                <td>
                    {{course.Name}}
                </td>
                <td style="text-align:center">
                    {{course.FormsCount}}
                </td>
                <td style="text-align:center">
                    {{course.ClassListCount}}
                </td>
                <td style="text-align:center">
                    <a href="#" ng-click="gotoManageCoursePage(course.Id)">
                        <i class="fa fa-cogs"></i>
                    </a>
                    <a href="#" ng-click="showRemoveCourseModal(course.Id)">
                        <i class="fa fa-times"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>